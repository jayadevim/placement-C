#include <stdio.h>

int main()
{
    int l ;
    int b ;
    printf("Enter length:");
    scanf("%d", &l);
    printf("Enter breadth:");
    scanf("%d", &b);
    int area = 1 * b;
    int peri = 2 * (l+b);
    printf("area = %d, perimeter = %d", area, peri);

    return 0;
}

Output:
  Enter length:4
  Enter breadth:5
  area=5 perimeter=18
